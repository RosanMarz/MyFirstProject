        android:layout_weight="5"
        >

    </fragment>

    <fragment
        android:id="@+id/secondFragmentid"
        android:name="com.example.roshan.staticfragment.secondFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">

    </fragment>

</LinearLayout>